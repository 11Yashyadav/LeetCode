class Solution {
    public String addSpaces(String s, int[] spaces) {
        StringBuilder str = new StringBuilder();
        int spaceIndex = 0;
        int n = spaces.length;
        for (int i = 0; i < s.length(); i++) {
            if (spaceIndex < n && i == spaces[spaceIndex]) {
                str.append(' ');
                spaceIndex++;
            }
            str.append(s.charAt(i));
        }

        return str.toString();
    }
}
